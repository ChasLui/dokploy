{
	"name": "monorepo",
	"private": true,
	"scripts": {
		"dokploy:setup": "pnpm run setup --filter=dokploy",
		"dokploy:dev": "pnpm run dev --filter=dokploy",
		"dokploy:build": "pnpm --filter dokploy run build",
		"dokploy:start": "pnpm run start --filter=dokploy",
		"dokploy:test": "pnpm run test --filter=dokploy",
		"dokploy:check": "pnpm --filter dokploy run typecheck",
		"docker:build:canary": "./apps/dokploy/docker/build.sh canary",
		"docs:dev": "pnpm run dev --filter=docs",
		"docs:build": "pnpm run build --filter=docs",
		"lint": "pnpm lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"prepare": "node .husky/install.mjs"
	},
	"devDependencies": {
		"dotenv": "16.4.5",
		"esbuild": "0.20.2",
		"tsx": "4.16.2",
		"lint-staged": "^15.2.7",
		"@biomejs/biome": "1.8.3",
		"husky": "^9.0.11",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/node": "^18.17.0"
	},
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": "^18.18.0",
		"pnpm": ">=9.5.0"
	},
	"lint-staged": {
		"*": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"commitlint": {
		"extends": ["@commitlint/config-conventional"]
	}
}
